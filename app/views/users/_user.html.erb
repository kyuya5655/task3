
<h2>User info</h2>

<%= image_tag user.get_profile_image(100,100) %>

<table class="table">
  <tbpdy>
    <tr>
      <th>
        name
      </th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    <tr>
      <th>
        introduction
      </th>
      <th>
        <%= user.introduction %>
      </th>
    </tr>
  </tbpdy>
</table>

<div class="row">
  <%= link_to edit_user_path(@user) do %>
    <i class="fas fa-user-cog" aria-hidden="true"></i>
  <% end %>
</div>