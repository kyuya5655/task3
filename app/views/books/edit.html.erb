
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
    <ul>
     <li><%= @book.errors.count%>error prohibited this book from being saved:</li>
         <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>

    <%= form_with model: @book do |f| %>
     <div class="form-group">
       <label for="book_title">Title</label></br>
       <%= f.text_field :title %>
     </div>

     <div class="form_group">
       <label for="book_body">Opinion</label></br>
       <%= f.text_area :body %>
     </div>
     <div class="form_group">
       <%= f.submit 'Update Book',class:"btn btn-success" %>
     </div>
    <% end %>

     <div class="form">
       <%= link_to "Show", book_path(@book) %>
       |
       <%= link_to "Back", "/books"%>
     </div>
  </div>
 </div>
</div>